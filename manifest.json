{
  "manifest_version": 3,
  "name": "GhostBlock",
  "version": "1.0",
  "description": "Click to hide or remove unwanted elements on any webpage. No data is collected.",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/assets/favicon.png",
      "32": "/assets/favicon.png",
      "48": "/assets/favicon.png",
      "128": "/assets/logo.png"
    }
  },


  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
